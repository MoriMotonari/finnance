<div class="modal fade" data-backdrop="static" id="transferModal" tabindex="-1" role="dialog" aria-labelledby="transferLabel" aria-hidden>
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="transferLabel">Transfer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="transferForm" action="" method="post">
                    <input class="form-control" type="hidden" name="src_id">
                    <input class="form-control" type="hidden" name="dst_id">
                    <div class="form-row">
                        <div class="form-group col-md-5 col-12">
                            <input class="form-control" type="text" name="src_desc" readonly>
                        </div>
                        <div class="col-2 text-center" style="font-size: 200%">
                            <i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i>
                        </div>
                        <div class="form-group col-md-5 col-10">
                            <input class="form-control" type="text" name="dst_desc" readonly>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-5 col-12">
                            <input class="form-control" type="number" name="src_amount" required>
                            <small class="form-text text-muted"></small>
                        </div>
                        <div class="col-2 text-center" style="font-size: 200%">
                            <i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i>
                        </div>
                        <div class="form-group col-md-5 col-10">
                            <input class="form-control" type="number" name="dst_amount" required>
                            <small class="form-text text-muted"></small> 
                            <div id="same_currency">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                                <i class="fa fa-unlock" aria-hidden="true" style="display: none;"></i>
                                <script>
                                    $('.fa-unlock').click(function () {
                                        $('.fa-lock').show();
                                        $('.fa-unlock').hide();
                                        $('input[name=dst_amount]').attr('readonly', true);
                                        $('input[name=dst_amount]').val($('input[name=src_amount]').val())
                                    });
                                    $('.fa-lock').click(function () {
                                        $('.fa-lock').hide();
                                        $('.fa-unlock').show();
                                        $('input[name=dst_amount]').attr('readonly', false);
                                    });
                                    function lock() {
                                        return !$('.fa-lock').is(":hidden");
                                    }
                                    $('input[name=src_amount]').change(function () {
                                        if (lock()) $('input[name=dst_amount]').val($(this).val());
                                    });
                                    $('input[name=dst_amount]').change(function () {
                                        if (lock()) $('input[name=src_amount]').val($(this).val());
                                    });
                                </script>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="date_issued">Date & Time of Transaction</label>
                        <input class="form-control" type="text" name="date_issued" maxlength=16 
                            pattern="((0[1-9]|[12]\d|3[01]).(0[13578]|1[02]).\d{4}|(0[1-9]|[12]\d|30).(0[469]|11).\d{4}|(0[1-9]|1\d|2[0-8]).02.\d{4}|29.02.\d\d(0[048]|[13579][26]|[2468][048])) ([01]\d|2[0-3]):[0-5][0-9]"
                            required {% if edit %}value="{{ tr.date_to_fmt() }}"{% endif %}>
                        <small class="form-text text-muted">dd.mm.yyyy hh:mm</small>
                    </div>
                    <div class="form-group">
                        <label for="comment">Comment</label>
                        <input class="form-control" type="text" maxlength=120 name="comment">
                    </div>
                </form>
                <button type="button" class="btn btn-secondary float-right" data-dismiss="modal">Cancel</button>
                <button type="submit" form="transferForm" class="btn btn-primary">Add new Transfer</button>
            </div>
        </div>
    </div>
</div>