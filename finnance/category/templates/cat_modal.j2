<div class="modal fade" data-backdrop="static" id="catModal" tabindex="-1"
    role="dialog" aria-labelledby="catLabel" aria-hidden>
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="catLabel">New Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="{{ url_for('category.add') }}" method="post" id="catForm">
                    <div class="form-row">
                        <div class="col-md-4 order-md-2">
                            <div class="btn-group btn-group-toggle float-right mb-2 ml-2" data-toggle="catExpinc">
                                <label class="btn btn-danger" id="catExpenseLabel">
                                    <input type="radio" name="catExpinc" id="catExpense" value="expense" checked>Expense
                                </label>
                                <label class="btn btn-light" id="catIncomeLabel">
                                    <input type="radio" name="catExpinc" id="catIncome" value="income">Income
                                </label>
                            </div>
                            <button id="lockBtn" type="button"
                                class="btn btn-secondary float-right" data-toggle="button"
                                aria-pressed="false">
                                <span></span>
                                <input type="hidden" id="lock" name="lock" value="false"/>
                            </button>
                        </div>
                        <div class="col-md-8 order-md-1 form-group">
                            <label for="desc">Category Name</label>
                            <input class="form-control" type="text" name="desc" maxlength=32 required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 form-group">
                            <label for="parentExp">Parent Category</label>
                            <select class="form-control" name="parentExp">
                            <option value="none">none</option>
                            {% for cat in categories %}
                                {% if cat.is_expense %}
                                    <option value="{{ cat.id }}">{{ cat.desc }}</option>
                                {% endif %}
                            {% endfor %}
                            </select>
                            <select class="form-control" name="parentInc">
                            <option value="none">none</option>
                            {% for cat in categories %}
                                {% if not cat.is_expense %}
                                    <option value="{{ cat.id }}">{{ cat.desc }}</option>
                                {% endif %}
                            {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="color">Color</label>
                            <input class="color-form-control" type="color" name="color" value="#ee0080" required>
                        </div>
                    </div>
                </form>
                <button type="button" class="btn btn-secondary float-right" data-dismiss="modal">Cancel</button>
                <button type="submit" form="catForm" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>

<script src="{{ url_for('category.static', filename='cat_modal.js') }}"></script>